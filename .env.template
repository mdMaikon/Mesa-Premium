# =================================================
# CONFIGURAÇÃO DO MENUAUTOMACOES ENTERPRISE
# =================================================
# 
# Este arquivo define as variáveis de ambiente necessárias 
# para o funcionamento do sistema MenuAutomacoes.
#
# INSTRUÇÕES:
# 1. Copie este arquivo para .env
# 2. Preencha com suas credenciais reais
# 3. NUNCA commite o arquivo .env no git
#
# =================================================

# =====================================
# CONFIGURAÇÕES DO BANCO DE DADOS MYSQL 
# =====================================
# Credenciais do servidor MySQL (Hostinger)

# Host do servidor MySQL da Hostinger
DB_HOST=seu_servidor_mysql.hostinger.com

# Nome de usuário do banco de dados
DB_USER=seu_usuario_mysql

# Senha do banco de dados (mantenha segura!)
DB_PASSWORD=sua_senha_mysql

# Nome do banco de dados
DB_NAME=nome_do_seu_banco

# Porta do MySQL (padrão: 3306)
DB_PORT=3306

# Pool de conexões (opcional)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# =====================================
# CONFIGURAÇÕES DE AUTOMAÇÃO
# =====================================

# Timeout para operações de automação (segundos)
AUTOMATION_TIMEOUT=300

# Número máximo de tentativas em caso de erro
MAX_RETRY_ATTEMPTS=3

# Modo headless para WebDriver (true/false)
HEADLESS_MODE=false

# Delay entre operações (milissegundos)
OPERATION_DELAY=1000

# =====================================
# CONFIGURAÇÕES DE LOGGING
# =====================================

# Nível de log (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Diretório de logs (relativo ao projeto)
LOG_DIR=logs

# Máximo de arquivos de log para manter
MAX_LOG_FILES=30

# Tamanho máximo do arquivo de log (MB)
MAX_LOG_SIZE=50

# =====================================
# CONFIGURAÇÕES DA INTERFACE (UI)
# =====================================

# Tema da interface (blue, green, dark-blue)
UI_THEME=blue

# Escala da interface (0.8 a 2.0)
UI_SCALING=1.0

# Geometria da janela principal (largura x altura)
UI_GEOMETRY=1200x800

# Posição inicial da janela (x,y) - opcional
# UI_POSITION=100,100

# =====================================
# CONFIGURAÇÕES DE SEGURANÇA
# =====================================

# Chave para criptografia de dados sensíveis (gerar uma aleatória)
# ENCRYPTION_KEY=sua_chave_secreta_aqui

# Timeout de sessão (minutos)
SESSION_TIMEOUT=30

# Habilitar logs de segurança (true/false)
SECURITY_LOGGING=true

# =====================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# =====================================

# Ambiente de execução (development, production, testing)
ENVIRONMENT=production

# Habilitar modo debug (true/false)
DEBUG_MODE=false

# Habilitar profiling de performance (true/false)
PERFORMANCE_PROFILING=false

# =====================================
# CONFIGURAÇÕES DO HUB XP
# =====================================

# URL base do Hub XP
HUB_XP_BASE_URL=https://hub.xpi.com.br

# Timeout para login (segundos) 
HUB_LOGIN_TIMEOUT=60

# Timeout para extração de token (segundos)
HUB_TOKEN_TIMEOUT=120

# =====================================
# CONFIGURAÇÕES AVANÇADAS
# =====================================

# Diretório temporário para downloads
TEMP_DIR=temp

# Diretório de dados persistentes
DATA_DIR=data

# Habilitar cache de resultados (true/false)
ENABLE_CACHE=true

# Tempo de vida do cache (horas)
CACHE_TTL=24

# =====================================
# CONFIGURAÇÕES DE NOTIFICAÇÃO
# =====================================

# Habilitar notificações do sistema (true/false)
SYSTEM_NOTIFICATIONS=true

# Habilitar sons de notificação (true/false)
NOTIFICATION_SOUNDS=false

